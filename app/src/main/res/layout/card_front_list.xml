<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:id="@+id/cardItem"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:elevation="4dp"
    android:layout_height="wrap_content"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/card_Wedding"
        android:orientation="horizontal"
        android:id="@+id/linGradDate"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/card_Prom"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="0dp"
            android:elevation="5dp"
            android:weightSum="7"
            android:clickable="true"
            android:layout_height="match_parent"
            android:focusable="true"
            tools:targetApi="lollipop">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:id="@+id/cardItemimg"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                app:cardCornerRadius="0dp"
                android:clickable="true"
                android:elevation="4dp"
                android:layout_height="160dp"
                tools:targetApi="lollipop">

                <ImageView
                    android:src="@drawable/img8"
                    android:scaleType="centerCrop"
                    android:id="@+id/ItemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>


            <!--<TextView-->
            <!--android:text=""-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/background_trans"-->
            <!--android:fontFamily="sans-serif-thin"-->
            <!--android:textSize="24sp"-->
            <!--android:id="@+id/ItemName1"-->
            <!--android:textStyle="bold"-->
            <!--android:gravity="center_vertical"-->
            <!--android:padding="8dp"-->
            <!--android:textColor="#fff"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->



            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_height="match_parent">



            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:text="Turbo Tyre"
                android:textColor="#111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/itemShop"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:maxLines="4"
                android:layout_marginBottom="1dp"
                android:fontFamily="sans-serif-thin"
                android:text="different items listed with comer sepertor..."
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />


                <Button
                    android:id="@+id/btnViewMore"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:text="View Items "
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <ProgressBar
                android:layout_width="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:id="@+id/rel_item_progress"
                android:visibility="gone"
                android:layout_toEndOf="@+id/btnViewMore"
                android:layout_below="@+id/itemShop"
                android:layout_height="30dp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>


