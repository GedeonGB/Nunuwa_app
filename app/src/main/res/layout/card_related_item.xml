<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_margin="8dp"
    android:id="@+id/cardItem"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:elevation="4dp"
    android:layout_height="230dp"
    tools:targetApi="lollipop">


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/card_Prom"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="0dp"
            android:elevation="5dp"
            android:clickable="true"
            android:layout_height="match_parent"
            android:focusable="true"
            tools:targetApi="lollipop">



                <ImageView
                    android:src="@drawable/img4"
                    android:scaleType="centerCrop"
                    android:id="@+id/ItemImageRel"
                    android:layout_width="match_parent"
                    android:layout_height="165dp" />

            <LinearLayout
                android:weightSum="5"
                android:layout_below="@+id/ItemImageRel"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:id="@+id/lindet1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="1dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Name: "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/itemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light"
                            android:text="Hand bag"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:id="@+id/lindet2"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/lindet1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="1dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Price: "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/itemPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light"
                            android:text="$8.70"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/lindet3"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/lindet2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="1dp"
                            android:fontFamily="sans-serif-thin"
                            android:text="Shop: "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/itemSHop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light"
                            android:text="XingXung"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />


                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:background="@drawable/cerclebackgroundpurple"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_shop_black_24dp"
                        android:layout_marginStart="12dp"
                        android:padding="4dp"
                        android:id="@+id/imgSale"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_below="@+id/imgSale"
                        android:layout_marginStart="15dp"
                        android:text="14"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" />

                    <ImageView
                        android:background="@drawable/cerclebackgroundpurple"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                        android:padding="4dp"
                        android:layout_toEndOf="@+id/imgSale"
                        android:id="@+id/imgLikes"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_below="@+id/imgLikes"
                        android:layout_marginStart="15dp"
                        android:text="11"
                        android:layout_toEndOf="@+id/imgSale"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/btnViewMore"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="11dp"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-light"
                        android:text="View"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


</androidx.cardview.widget.CardView>

